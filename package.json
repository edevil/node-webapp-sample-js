{
  "name": "node-webapp-sample-js",
  "version": "1.0.0",
  "description": "Sample node.js webapp with the recommended modules for basic functionality.",
  "main": "src/server.js",
  "repository": "github:edevil/node-webapp-sample-js",
  "scripts": {
    "knex": "node ./node_modules/.bin/knex",
    "start": "nodemon",
    "test": "jest",
    "build": "webpack",
    "lint": "eslint 'src/**/*.js'",
    "pretty": "prettier --list-different 'src/**/*.js'",
    "watch": "webpack --watch",
    "dev": "concurrently \"npm:start\" \"npm:watch\""
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.13.1"
  },
  "author": "Andre Cruz",
  "license": "ISC",
  "dependencies": {
    "@emartech/cls-adapter": "^1.3.0",
    "@godaddy/terminus": "^4.3.1",
    "@koa/cors": "^3.0.0",
    "@sentry/node": "^5.14.2",
    "apollo-server-koa": "^2.11.0",
    "app-root-path": "^3.0.0",
    "async-busboy": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "bytes": "^3.1.0",
    "chalk": "^3.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "csrf": "^3.1.0",
    "dotenv": "^8.2.0",
    "graphql": "^14.6.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-input-number": "0.0.10",
    "graphql-redis-subscriptions": "^2.2.1",
    "ioredis": "^4.16.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.11",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-csrf": "^3.0.8",
    "koa-helmet": "^5.2.0",
    "koa-i18n": "^2.1.0",
    "koa-locale": "^1.3.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-ratelimit": "^4.3.0",
    "koa-router": "^8.0.8",
    "koa-session": "^5.13.1",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.1",
    "nunjucks": "^3.2.1",
    "oauth2-server": "4.0.0-dev.2",
    "objection": "^2.1.3",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passthrough-counter": "^1.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.2.0",
    "uuid": "^7.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "acorn": "^7.1.1",
    "autoprefixer": "^9.7.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.1.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "extract-loader": "^5.0.1",
    "file-loader": "^5.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.5",
    "sass-loader": "^8.0.2",
    "supertest": "^4.0.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty && npm run lint",
      "pre-push": "npm test"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    }
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text-summary"
    ],
    "transform": {}
  }
}
