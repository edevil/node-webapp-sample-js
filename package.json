{
  "name": "node-webapp-sample-js",
  "version": "1.0.0",
  "description": "Sample node.js webapp with the recommended modules for basic functionality.",
  "main": "src/server.js",
  "repository": "github:edevil/node-webapp-sample-js",
  "scripts": {
    "knex": "node ./node_modules/.bin/knex",
    "start": "nodemon",
    "test": "jest",
    "build": "mkdir dist; cp -r src knexfile.js dist/",
    "lint": "eslint 'src/**/*.js'",
    "pretty": "prettier --list-different 'src/**/*.js'"
  },
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.5.0"
  },
  "author": "Andre Cruz",
  "license": "ISC",
  "dependencies": {
    "@emartech/cls-adapter": "^1.2.0",
    "@godaddy/terminus": "^4.1.0",
    "@koa/cors": "^2.2.3",
    "@sentry/node": "^4.4.2",
    "apollo-server-koa": "^2.3.1",
    "app-root-path": "^2.1.0",
    "async-busboy": "^0.7.0",
    "bcryptjs": "^2.4.3",
    "bytes": "^3.0.0",
    "chalk": "^2.4.1",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "csrf": "^3.0.6",
    "dotenv": "^6.2.0",
    "graphql": "^14.0.2",
    "graphql-depth-limit": "^1.1.0",
    "graphql-input-number": "0.0.10",
    "graphql-redis-subscriptions": "^2.0.0",
    "ioredis": "^4.3.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-csrf": "^3.0.6",
    "koa-helmet": "^4.0.0",
    "koa-i18n": "^2.1.0",
    "koa-locale": "^1.3.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.1",
    "koa-ratelimit": "^4.1.2",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.1",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.5",
    "nunjucks": "^3.1.6",
    "oauth2-server": "4.0.0-dev.2",
    "objection": "^1.4.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "passthrough-counter": "^1.0.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "socket.io": "^2.2.0",
    "socket.io-redis": "^5.2.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty && npm run lint",
      "pre-push": "npm test"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true
    }
  },
  "jest": {
    "rootDir": ".",
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text-summary"
    ]
  }
}
